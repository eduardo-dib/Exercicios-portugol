programa {
	funcao inicio() {
	    /*Esse algoritmo calcula a área do triângulo com base e altura fornecidas pelo usuário*/
	   real h, b
	   
	   
	   escreva("Forneça a altura do triângulo: ")
	   leia(h)
	   escreva("Forneça a base do triângulo: ")
	   leia(b)
	   escreva("A área do triângulo é: ", (b*h)/2, " m2")
	}
}
